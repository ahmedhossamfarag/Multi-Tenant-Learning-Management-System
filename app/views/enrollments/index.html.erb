<h1><%= @course.title %></h1>
<p><%= @course.description %></p>
<br />
<br />
<h3>Enrolled Students</h3>
<div class="list-group">
  <% @enrolled_students.each do |s| %>
    <div class="list-group-item">
      <h5><%= s.name %></h5>
      <%= button_to "Delete", course_enrollment_path(course_id: @course.id, id: s.enrollment_id), method: :delete, class: "btn btn-danger"%>
    </div>
  <% end %>
</div>
<br />
<br />
<h3>Other Students</h3>
<div class="list-group">
  <% @other_students.each do |s| %>
    <div class="list-group-item">
      <h5><%= s.name %></h5>
      <%= button_to "Enroll", course_enrollments_path, params: { student_id: s.id },
                    method: :post, class: "btn btn-success" %>
    </div>
  <% end %>
</div>
