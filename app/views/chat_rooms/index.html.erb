<p style="color: green"><%= notice %></p>

<% content_for :title, "Chat rooms" %>

<h1>Chat rooms</h1>

<div id="chat_rooms" class="list-group">
  <% @chat_rooms.each do |chat_room| %>
    <div class="list-group-item">
      <a href="<%= chat_room_path(chat_room) %>" ><h4><%= chat_room.title %></h4></a>
      <% if chat_room.user_id == current_user.id %>
        <%= button_to "Delete", chat_room, method: :delete, class: "btn btn-danger" %>
      <% end %>
    </div>
  <% end %>
</div>
<br>
<br>
<%= link_to "New chat room", new_chat_room_path %>
